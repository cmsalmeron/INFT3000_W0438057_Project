<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PageHeader">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#c00000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SectionHeader">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#0040ff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="seekbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">9</item>
    </style>

    <style name="seekbarImage">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="txtEquation">
        <item name="android:textColor">#00ff80</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txtCalculationDouble">
        <item name="android:textColor">#c0c0c0</item>
        <item name="android:background">#000000</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txtCalculationInteger">
        <item name="android:textColor">#c0c0c0</item>
        <item name="android:background">#000000</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txtCalculationPercentage">
        <item name="android:textColor">#c0c0c0</item>
